# git clone git@tpotjj:<account_or_organization>/<repo_name>.git
Host tpotjj
    Hostname github.com
    User git
    IdentityFile ~/.ssh/id_rsa_tpotjj

# git clone git@Joris2Jansen:<account_or_organization>/<repo_name>.git
Host Joris2Jansen
    Hostname github.com
    User git
    IdentityFile ~/.ssh/id_rsa_Joris2Jansen

# git clone git@joris-jansen:<account_or_organization>/<repo_name>.git
Host joris-jansen
    Hostname bitbucket.org
    User git
    IdentityFile ~/.ssh/id_rsa_joris-jansen
